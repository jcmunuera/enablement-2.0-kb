{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://enablement.bank.com/schemas/manifest.schema.json",
  "title": "Enablement Manifest",
  "description": "Schema for .enablement/manifest.json - artifact traceability",
  "version": "1.0",
  "type": "object",
  "required": [
    "version",
    "generated",
    "skill",
    "modules"
  ],
  "properties": {
    "version": {
      "type": "string",
      "description": "Manifest schema version",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "examples": ["1.0.0"]
    },
    "generated": {
      "type": "object",
      "description": "Generation metadata",
      "required": ["timestamp", "executionId"],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of generation"
        },
        "executionId": {
          "type": "string",
          "description": "Unique execution identifier",
          "pattern": "^[a-z]{3}-[a-z0-9-]+-[0-9]{8}-[0-9]{6}-[a-f0-9]{4}$",
          "examples": ["gen-customer-api-20260113-143052-a7b3"]
        },
        "duration": {
          "type": "string",
          "description": "Generation duration",
          "examples": ["45s", "1m 23s"]
        }
      }
    },
    "skill": {
      "type": "object",
      "description": "Skill used for generation",
      "required": ["id", "version"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Skill identifier",
          "pattern": "^skill-[0-9]{3}-[a-z0-9-]+$",
          "examples": ["skill-021-api-rest-java-spring"]
        },
        "version": {
          "type": "string",
          "description": "Skill version",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "examples": ["2.3.0"]
        },
        "type": {
          "type": "string",
          "enum": ["GENERATE", "ADD", "REMOVE", "REFACTOR", "MIGRATE"],
          "description": "Skill type"
        }
      }
    },
    "modules": {
      "type": "array",
      "description": "Modules consulted during generation",
      "items": {
        "type": "object",
        "required": ["id", "version"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Module identifier",
            "pattern": "^mod-code-[0-9]{3}-[a-z0-9-]+$",
            "examples": ["mod-code-015-hexagonal-base-java-spring"]
          },
          "version": {
            "type": "string",
            "description": "Module version"
          },
          "variant": {
            "type": "string",
            "description": "Selected variant (if applicable)"
          },
          "templates": {
            "type": "array",
            "description": "Templates used from this module",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "input": {
      "type": "object",
      "description": "Generation input parameters",
      "properties": {
        "serviceName": {
          "type": "string"
        },
        "basePackage": {
          "type": "string"
        },
        "apiLayer": {
          "type": "string",
          "enum": ["experience", "composable", "domain", "system"]
        },
        "entities": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "features": {
          "type": "object"
        }
      }
    },
    "artifacts": {
      "type": "object",
      "description": "Generated artifacts summary",
      "properties": {
        "totalFiles": {
          "type": "integer",
          "description": "Total number of generated files"
        },
        "sourceFiles": {
          "type": "integer",
          "description": "Number of Java source files"
        },
        "testFiles": {
          "type": "integer",
          "description": "Number of test files"
        },
        "configFiles": {
          "type": "integer",
          "description": "Number of configuration files"
        },
        "files": {
          "type": "array",
          "description": "List of generated files with metadata",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "description": "Relative file path"
              },
              "template": {
                "type": "string",
                "description": "Source template"
              },
              "module": {
                "type": "string",
                "description": "Source module"
              },
              "checksum": {
                "type": "string",
                "description": "File checksum (SHA-256)"
              }
            }
          }
        }
      }
    },
    "validation": {
      "type": "object",
      "description": "Validation results",
      "properties": {
        "compilation": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["SUCCESS", "FAILED", "SKIPPED"]
            },
            "attempts": {
              "type": "integer"
            },
            "errors": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "tiers": {
          "type": "object",
          "properties": {
            "tier1": {
              "type": "string",
              "enum": ["PASS", "FAIL", "SKIP"]
            },
            "tier2": {
              "type": "string",
              "enum": ["PASS", "FAIL", "SKIP"]
            },
            "tier3": {
              "type": "string",
              "enum": ["PASS", "FAIL", "SKIP"]
            }
          }
        }
      }
    },
    "adrs": {
      "type": "array",
      "description": "ADRs applied during generation",
      "items": {
        "type": "string",
        "pattern": "^adr-[0-9]{3}-[a-z0-9-]+$"
      }
    },
    "eris": {
      "type": "array",
      "description": "ERIs referenced during generation",
      "items": {
        "type": "string",
        "pattern": "^eri-code-[0-9]{3}-[a-z0-9-]+$"
      }
    }
  },
  "additionalProperties": false
}
