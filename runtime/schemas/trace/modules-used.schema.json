{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "enablement/schemas/trace/modules-used.schema.json",
  "title": "Modules Used",
  "description": "Detailed trace of which modules were used and what they generated",
  "type": "object",
  "required": ["version", "modules"],
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version"
    },
    "modules": {
      "type": "array",
      "description": "List of modules used in generation",
      "items": {
        "type": "object",
        "required": ["id", "capability", "phase"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^mod-[a-z]+-[0-9]{3}-[a-z0-9-]+$",
            "description": "Full module identifier"
          },
          "version": {
            "type": "string",
            "description": "Module version"
          },
          "capability": {
            "type": "string",
            "pattern": "^[a-z-]+\\.[a-z-]+$",
            "description": "Capability this module implements"
          },
          "phase": {
            "type": "integer",
            "minimum": 1,
            "description": "Generation phase where this module was used"
          },
          "templates_used": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Template files used from this module"
          },
          "files_generated": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["path"],
              "properties": {
                "path": {
                  "type": "string",
                  "description": "Generated file path (relative to project root)"
                },
                "template": {
                  "type": "string",
                  "description": "Template used to generate this file"
                },
                "checksum": {
                  "type": "string",
                  "pattern": "^sha256:[a-f0-9]{64}$",
                  "description": "SHA256 checksum of generated content"
                },
                "lines": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Number of lines in generated file"
                }
              }
            },
            "description": "Files generated by this module"
          },
          "files_modified": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["path", "modification_type"],
              "properties": {
                "path": {
                  "type": "string",
                  "description": "Modified file path"
                },
                "modification_type": {
                  "type": "string",
                  "enum": ["annotation_added", "method_added", "import_added", "dependency_added", "config_added", "section_added"],
                  "description": "Type of modification made"
                },
                "details": {
                  "type": "string",
                  "description": "Details of the modification"
                }
              }
            },
            "description": "Files modified by this module"
          },
          "tests_generated": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Test files generated by this module"
          },
          "dependencies_added": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "groupId": {"type": "string"},
                "artifactId": {"type": "string"},
                "version": {"type": "string"},
                "scope": {"type": "string"}
              }
            },
            "description": "Maven/Gradle dependencies added by this module"
          },
          "config_added": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "file": {"type": "string"},
                "path": {"type": "string"},
                "description": {"type": "string"}
              }
            },
            "description": "Configuration sections added by this module"
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "description": "Summary of module usage",
      "properties": {
        "total_modules": {
          "type": "integer",
          "minimum": 0
        },
        "by_phase": {
          "type": "object",
          "additionalProperties": {
            "type": "integer"
          },
          "description": "Count of modules by phase"
        },
        "by_capability_type": {
          "type": "object",
          "properties": {
            "foundational": {"type": "integer"},
            "layered": {"type": "integer"},
            "cross_cutting": {"type": "integer"}
          }
        }
      }
    }
  }
}
